# Ejemplo de configuración de almacenamiento
# /etc/pve/storage.cfg

# Almacenamiento local para ISOs y templates
dir: local
    path /var/lib/vz
    content iso,vztmpl,backup
    maxfiles 3
    shared 0

# LVM-Thin local para discos de VMs
lvmthin: local-lvm
    thinpool data
    vgname pve
    content rootdir,images

